rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated users to check the whitelist (user collection)
    match /user/{userId} {
      allow read: if request.auth != null;
    }
    
    // Authenticated users can read/write shared collections
    match /expenses/{expenseId} {
      allow read, write: if request.auth != null;
    }
    
    match /expenseDetails/{detailId} {
      allow read, write: if request.auth != null;
    }

    match /categories/{categoryId} {
      allow read, write: if request.auth != null;
    }
    match /mailstaging/{itemId} {
      // Allow if owner OR if it's a shared SMS (unknown_mobile)
      allow read, delete, update: if request.auth != null && (
        resource.data.userEmail == request.auth.token.email || 
        resource.data.userEmail == 'unknown_mobile'
      );
      // Allow create if matches email (server uses admin sdk anyway, but for client simulation)
      allow create: if request.auth != null && request.resource.data.userEmail == request.auth.token.email;
    }
  }
}